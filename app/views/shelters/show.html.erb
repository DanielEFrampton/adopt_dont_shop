<h2>Shelter Info</h2>

<main>
  <section>
    <p>
      Name: <%= link_to "#{@shelter.name}", "/shelters/#{@shelter.id}" %><br/>
      Address: <%= @shelter.address %><br/>
      City: <%= @shelter.city %><br/>
      State: <%= @shelter.state %><br/>
      Zip: <%= @shelter.zip %><br/>
    </p>
  </section>
</main>

<footer>
  <a href="/shelters/<%= @shelter.id %>/pets">All Pets at This Shelter</a>
  <a href="/shelters/<%= @shelter.id %>/edit">Edit Shelter</a>
  <a href="/shelters/<%= @shelter.id %>" data-method="DELETE">Delete Shelter</a>
</footer>
