<h1>All Pets at <%= @shelter.name %></h1>

<% @pets.each do |pet| %>
  <h3><%= pet.name %></h3>
  <p>
    Approximate Age: <%= pet.approx_age %><br/>
    Sex: <%= pet.sex %><br/>
    <%= image_tag "#{pet.image_path}", alt: "#{pet.image_path}" %>
  </p>
<% end %>

<p>
  <a href="/shelters/<%= @shelter.id %>">Return to Shelter Info</a>
</p>
