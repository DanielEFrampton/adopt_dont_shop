<h1>All Pets</h1>

<% @pets.each do |pet| %>
  <h3><%= pet.name %></h3>
  <p>
    Approximate Age: <%= pet.approx_age %><br/>
    Sex: <%= pet.sex %><br/>
    Current Shelter: <a href="/shelters/<%= pet.shelter.id %>"><%= pet.shelter.name %></a><br/>
    <img src="<%= pet.image_path %>" alt="<%= pet.image_path %>">
  </p>
<% end %>
