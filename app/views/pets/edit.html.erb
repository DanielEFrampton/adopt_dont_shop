<h1>Edit Pet Info</h1>

<%= form_tag "/pets/#{@pet.id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @pet.name %><br/>
  <%= label_tag :approx_age, 'Approximate Age' %>
  <%= text_field_tag :approx_age, @pet.approx_age %><br/>
  <%= label_tag :sex %>
  <%= text_field_tag :sex, @pet.sex %><br/>
  <%= label_tag :image_path, 'Image Path' %>
  <%= text_field_tag :image_path, @pet.image_path %><br/>
  <%= label_tag :description %>
  <%= text_field_tag :description, @pet.description %><br/>

  <%= submit_tag 'Submit' %>
<% end %>
